@model congyou.Models.Blog
@{
    ViewData["Title"] = "EditFiles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index - List of Files</h1>
<p>
    <a asp-action="UploadFile" asp-route-id="@Model.BlogId">Upload File</a>
</p>
<div>
    <h4 style="margin-bottom: 10px;">Files</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Files.ElementAt(0).Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Files.ElementAt(0).Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Files.ElementAt(0).Path)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Files)
            {
            <tr>
                <td style="padding: 0.1em;">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td style="padding: 0.1em;">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="padding: 0.1em;">
                    @Html.DisplayFor(modelItem => item.Path)
                </td>
                <td style="padding: 0.1em;">
                    <a asp-action="DeleteFile" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Index">Back to Blog List</a>
</div>