@model IEnumerable<congyou.Models.Request>
@{
    ViewData["Title"] = "PendingRequests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Here are your pending Requests</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlogId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="padding: 0.1em;">
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td style="padding: 0.1em;">
                    @Html.DisplayFor(modelItem => item.BlogId)
                </td>
                <td style="padding: 0.1em;">
                    <a asp-action="ApproveRequest" asp-route-id="@item.CommentId">Approve Request</a> |
                    @*<a asp-action="Details" asp-route-id="@item.LectureId">Details</a> |*@
                    <a asp-action="IgnoreRequest" asp-route-id="@item.CommentId">Ignore Request</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to Blog List</a>
</div>