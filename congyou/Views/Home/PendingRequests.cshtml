@model IEnumerable<congyou.Models.Request>
@{
    ViewData["Title"] = "PendingRequests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Here are pending Requests</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlogId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td style="padding: 0.1em;">
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td style="padding: 0.1em;">
                @Html.DisplayFor(modelItem => item.BlogId)
            </td>
            <td style="padding: 0.1em;">
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td style="padding: 0.1em;">
                <a asp-action="ApproveRequest" asp-route-id="@item.Id">Approve Request</a> |
                @*<a asp-action="Details" asp-route-id="@item.LectureId">Details</a> |*@
                <a asp-action="IgnoreRequest" asp-route-id="@item.Id">Ignore Request</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to Blog List</a>
</div>
